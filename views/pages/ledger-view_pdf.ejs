<body class="bg-light">


    <!-- Preloader -->

    <div id="preloader">

        <div class="preloader-inner">

            <div class="spinner"></div>

            <div class="logo"><img src="/invoiceSystem/assets/img/software_logo.png" alt="img"></div>

        </div>

    </div>

    <!-- Main Content -->
    <main class="">

        <div class="container-fluid">
            <div class="inner-contents">
                <div
                    class="page-header d-flex align-items-start align-items-md-center justify-content-between mr-bottom-30">
                    <div class="left-part">
                        <h2 class="text-dark">Invoice</h2>
                        <p class="text-gray mb-0">Lorem ipsum dolor sit amet </p>
                    </div>
                    <div class="right-part d-flex align-items-center gap-4 flex-wrap">
                        <form class="search-form w-auto" action="search.php">
                            <input type="text" name="search" class=" bg-white form-control" placeholder="Search">
                            <button type="submit" class="btn"><img src="/invoiceSystem/assets/img/svg/search.svg"
                                    alt=""></button>
                        </form>
                        <div>
                            <a href="invoice-new.html" class="btn btn-primary ff-heading fs-18 fw-bold py-3"><span
                                    class="fs-21"><i class="bi bi-bookmark-plus-fill"></i></span> <i
                                    class="bi bi-plus"></i> New Invoice</a>
                        </div>
                    </div>
                </div>

                <div class="card border-0 p-3 p-md-5">
                    <div
                        class="card-header pb-0 bg-transparent border-0 d-flex align-items-center justify-content-between gap-3 flex-wrap">
                        <h4 class="mb-0 fs-38 d-flex align-items-baseline gap-4 flex-wrap"> <a href="invoices.html"
                                class="d-flex align-items-center text-dark"><i
                                    class="bi bi-arrow-left-circle-fill fs-28 text-gray me-5 d-inline-block"></i>
                                Invoice</a> <span class="fs-24 text-gray">#INV-000<%= result.bill_no %></span></h4>
                        <div class="ms-xxl-auto d-flex align-items-cente gap-3">
                            <div class="d-flex align-items-center gap-3 flex-wrap">
                                <button class="btn btn-soft-info fs-16 fw-bold" type='button'><i
                                        class="bi bi-check2-all me-2"></i> Invoice Sent</button>
                                <a href="/invoiceSystem/assets/img/kleon-invoice.pdf"
                                    class="btn btn-primary ff-heading fs-18 fw-semibold" download><i
                                        class="bi bi-download me-2"></i> Download</a>
                                <button class="p-0 border-0 bg-transparent text-primary fs-24" type='button'
                                    onclick="printDiv('printable-card')"><i class="bi bi-printer-fill"></i></button>
                                <div class="dropdown d-flex align-items-center">
                                    <a href="#" data-bs-toggle="dropdown" class="fs-24 text-gray">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </a>
                                    <div class="dropdown-menu p-0">
                                        <a class="dropdown-item" href="invoice-new.html">Edit</a>
                                        <a class="dropdown-item text-danger" href="#">Delete</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-body p-2 p-md-6" id="printable-card">
                        <div class="row mb-1">
                            <div class="col-xxl-6 col-lg-6">
                                <h6 class="text-gray-300 text-uppercase ls-1">From</h6>
                                <div class="box d-flex align-items-start gap-5">
                                    <!-- <div class="rounded-5 overflow-hidden flex-shrink-0 d-none d-sm-block">
                                <img src="/invoiceSystem/assets/img/company.jpg" alt="img" width="122" height="122">
                            </div> -->
                                    <div class="mt-3">
                                        <h4 class="fs-28 text-dark mb-3">JMD</h4>
                                        <p class="text-dark mb-3">18 Guild Street London, EC2V 5PX <br>
                                            <span class="fw-semibold">United Kingdom</span>
                                        </p>
                                        <p class="d-flex align-items-center justify-content-between gap-2 flex-wrap">
                                            <span>kleonadmin@mail.com</span> <span>tel:(012) 3456 789</span></p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xxl-6 col-lg-6">
                                <h6 class="text-gray-300 text-uppercase ls-1">Client</h6>
                                <div class="box d-flex align-items-start gap-5">
                                    <!-- <div class="rounded-5 overflow-hidden flex-shrink-0 d-none d-sm-block shadow">
                                <img src="/invoiceSystem/assets/img/clients/10.jpg" alt="img" width="122" height="122">
                            </div> -->
                                    <div class="mt-3">
                                        <h4 class="fs-28 text-dark mb-3">
                                            <%= result.customer.name %>
                                        </h4>
                                        <p class="text-dark mb-3">
                                            <%= result.customer.address %>, <%= result.customer.city %><br>
                                                    <span class="fw-semibold">
                                                        <%= result.customer.state %>, <%= result.customer.country %>
                                                    </span>
                                        </p>
                                        <p class="d-flex align-items-center justify-content-between gap-2 flex-wrap">
                                            <span>+91-<%= result.customer.phone %></span></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="gradient-border mb-0"></div>
                        <div class="row">
                            <div class="col-xxl-4 col-lg-12 pe-xxl-5 mb-6 mb-xxl-0">
                                <!-- <h6 class="text-gray-300 text-uppercase ls-1">Project Name</h6>
                        <h4 class="fs-28 fw-semibold text-dark lh-44">Redesign landing page website for company profile</h4> -->


                                <h6 class="text-gray-300 text-uppercase ls-1 mr-top-40">Due Date</h6>
                                <h5 class="fw-semibold text-primary lh-33">
                                    <%= result.invoice_date %>
                                </h5>
                            </div>

                            <div class="col-xxl-8 col-lg-12">
                                <table class="table-responsive w-100 invoice-table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <div class="ff-heading fs-16 fw-bold text-gray-300 text-uppercase ls-1">
                                                    Name</div>
                                            </th>
                                            <th>
                                                <div class="ff-heading fs-16 fw-bold text-gray-300 text-uppercase ls-1">
                                                    QTY</div>
                                            </th>
                                            <th>
                                                <div class="ff-heading fs-16 fw-bold text-gray-300 text-uppercase ls-1">
                                                    Rate</div>
                                            </th>
                                            <th>
                                                <div class="ff-heading fs-16 fw-bold text-gray-300 text-uppercase ls-1">
                                                    Amount</div>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% let grandTotal=0; if (result.ledger_products.length> 0) { %>
                                            <% result.ledger_products.forEach((item, index)=> { %>
                                                <% item.product.forEach((row, subIndex)=> { %>

                                                    <tr class="border-bottom border-1 border-light-200">
                                                        <td>
                                                            <div
                                                                class="ff-heading fs-18 fw-semibold text-dark w-100 py-2 px-2 px-md-0">
                                                                <%= row.name %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div
                                                                class="ff-heading fs-18 fw-semibold text-dark w-100 py-2 px-2 px-md-0">
                                                                <%= item.product_qty %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div
                                                                class="ff-heading fs-18 fw-semibold text-dark w-100 py-2 px-2 px-md-0">
                                                                ₹<%= item.product_price%>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div
                                                                class="ff-heading fs-18 fw-semibold text-dark w-100 py-2 px-2 px-md-0">
                                                                ₹<%= item.product_qty * item.product_price %>
                                                            </div>
                                                        </td>
                                                        <% let itemTotal=item.product_qty * item.product_price;
                                                            grandTotal +=itemTotal; // Add this item's total to grand total 
                                                            %>
                                                    </tr>
                                                    <% }); %>
                                                        <% }); %>
                                                            <% } %>



                                                                <tr>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-16 fw-bold text-gray text-uppercase ls-1 w-100 py-2 mt-5">
                                                                            Subtotal</div>
                                                                    </td>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-18 fw-normal text-dark text-uppercase w-100 py-2 mt-5">
                                                                            $ <%= grandTotal %>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-16 fw-bold text-gray text-uppercase ls-1 w-100 py-2">
                                                                            Tax</div>
                                                                    </td>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-18 fw-normal text-dark text-uppercase w-100 py-2">
                                                                            2%</div>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-16 fw-bold text-gray text-uppercase ls-1 w-100 py-2">
                                                                            Total</div>
                                                                    </td>
                                                                    <td colspan="2">
                                                                        <div
                                                                            class="ff-heading fs-24 fw-bold text-dark text-uppercase w-100 py-2">
                                                                            $ <%= grandTotal %>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>
